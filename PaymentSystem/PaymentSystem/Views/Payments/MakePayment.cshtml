@model MakePaymentBindingModel

<h2>New Payment</h2>

@using (Html.BeginForm("MakePayment", "Payments", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        @Html.LabelFor(model => model.AccountId, "Account", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.AccountId, Model.AccountsSelectList, "--Select Account--", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AccountId, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.PaymentIBAN, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.PaymentIBAN, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PaymentIBAN, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.PaymentAmount, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.PaymentAmount, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PaymentAmount, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.PaymentReason, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.PaymentReason, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PaymentReason, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <input type="submit" class="btn btn-outline-success" value="Make Payment" />
        </div>
    </div>
}
@model PrivilegedUserOrderBindingModel

@using (Html.BeginForm("MakeOrderPrivileged", "Orders", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Partial("_MakeOrderForm", Model)

    <div class="form-group row">
        @Html.LabelFor(model => model.AdditionalDessertId, "Additional dessert", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.AdditionalDessertId, ViewBag.DessertsList as SelectList, "-- none --", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <input type="submit" class="btn btn-outline-success" value="Make Order" />
        </div>
    </div>
}
@model MakeVotingBindingModel

<h2>Make Voting</h2>

@using (Html.BeginForm("MakeVoting", "Votings", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        @Html.LabelFor(model => model.ReceiverId, "Employee", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.ReceiverId, Model.ReceiversSelectList, "-- none --", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ReceiverId, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.PresentId, "Present", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.PresentId, Model.PresentsSelectList, "-- none --", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PresentId, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <input type="submit" class="btn btn-outline-success" value="Make Voting" />
        </div>
    </div>
}
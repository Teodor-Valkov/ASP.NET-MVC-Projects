@model VoteBindingModel

<h2>Make Voting</h2>

@using (Html.BeginForm("Vote", "Votings", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @*@Html.Hidden("VotingId", ViewBag.VotingId as string)*@
    @Html.HiddenFor(model => model.VotingId)

    <div class="form-group row">
        @Html.LabelFor(model => model.PresentId, "Present", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.PresentId, Model.PresentsSelectList, "-- none --", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PresentId, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <input type="submit" class="btn btn-outline-success" value="Vote" />
        </div>
    </div>
}